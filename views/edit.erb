<div>
  <form action="/memos/<%= @id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <% memo = @data['memos'].find { |m| m['id'] == @id } %>
			<input type="text" name="title" value="<%= memo['title'] %>">
			<textarea name="content"><%= memo['content'] %></textarea>
			<button type="submit">更新</button>
  </form>
</div>
